{
    "app-id": "net.gwyddion.Gwyddion",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "gwyddion",
    "copy-icon": true,
    "rename-icon": "gwyddion",
    "rename-desktop-file": "gwyddion.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=x11"
    ],
    "modules": [
        "shared-modules/gtk2/gtk2.json",
        "shared-modules/glu/glu-9.json",
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "gwyddion",
            "config-opts": [
                "--without-ruby"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://sourceforge.net/projects/gwyddion/files/gwyddion/2.56/gwyddion-2.56.tar.xz",
                    "md5": "5f9fdb773fbaf3270b472de6081dd3a8"
                },
                {
                    "type": "file",
                    "path": "gwyddion.png"
                }
            ],
            "post-install": [
                "install -D gwyddion.png /app/share/icons/hicolor/128x128/apps/net.gwyddion.Gwyddion.png"
            ]
        }
    ]
}
